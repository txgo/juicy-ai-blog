---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
const recentPosts = posts.sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime()).slice(0, 3);
const baseUrl = import.meta.env.BASE_URL;

// Utility function to properly join base URL with path
function joinUrl(base: string, path: string): string {
  return base.endsWith('/') ? base + path : base + '/' + path;
}
---

<Layout title="Juicy AI - Personal Blog">
  <div class="bg-gradient-to-br from-indigo-50 to-purple-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-gray-900 sm:text-5xl md:text-6xl">
          Welcome to <span class="text-indigo-600">Juicy AI</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Exploring the intersection of artificial intelligence, technology, and innovation. 
          Join me on a journey through the latest developments in AI and tech.
        </p>
        <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8 gap-4">
          <Button variant="default" size="lg">
            <a href={joinUrl(baseUrl, 'blog/')} class="text-white">Read Blog</a>
          </Button>
          <Button variant="outline" size="lg">
            <a href={joinUrl(baseUrl, 'about/')}> About Me</a>
          </Button>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900">Latest Posts</h2>
      <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500">
        Discover the latest insights and thoughts on AI and technology.
      </p>
    </div>

    <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {recentPosts.map((post) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          {post.data.image && (
            <img 
              src={post.data.image} 
              alt={post.data.title}
              class="w-full h-48 object-cover"
            />
          )}
          <div class="p-6">
            <div class="flex items-center text-sm text-gray-500 mb-2">
              <time datetime={post.data.publishedAt.toISOString()}>
                {post.data.publishedAt.toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })}
              </time>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              <a href={joinUrl(baseUrl, `blog/${post.slug}/`)} class="hover:text-indigo-600">
                {post.data.title}
              </a>
            </h3>
            <p class="text-gray-600 mb-4">{post.data.summary}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {post.data.tags.map((tag) => (
                <span class="px-2 py-1 bg-indigo-100 text-indigo-800 text-xs rounded-full">
                  {tag}
                </span>
              ))}
            </div>
            <a href={joinUrl(baseUrl, `blog/${post.slug}/`)} class="text-indigo-600 hover:text-indigo-800 font-medium">
              Read more â†’
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>
