---
import '../styles/globals.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Juicy AI - Personal Blog about AI, Technology, and Innovation" } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;

// Utility function to properly join base URL with path
function joinUrl(base: string, path: string): string {
  return base.endsWith('/') ? base + path : base + '/' + path;
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={joinUrl(baseUrl, 'favicon.svg')} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900">
    <header class="bg-white shadow-sm border-b border-gray-200">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center">
            <a href={baseUrl} class="text-2xl font-bold text-indigo-600">Juicy AI</a>
          </div>
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4">
              <a href={baseUrl} class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium">Home</a>
              <a href={joinUrl(baseUrl, 'blog/')} class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium">Blog</a>
              <a href={joinUrl(baseUrl, 'about/')} class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium">About</a>
            </div>
          </div>
          <div class="md:hidden">
            <button
              type="button"
              class="text-gray-700 hover:text-indigo-600 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
            >
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-gray-900 text-white mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center">
          <p>&copy; 2024 Juicy AI. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>